{
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}